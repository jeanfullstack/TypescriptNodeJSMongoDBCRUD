<div class="row"> {{!-- Creacion de la fila --}}


    <div class="col-md-4 offset-md-4">

        <div class="card">

            <div class="card-body">

                <form action="/tasks/edit/{{task._id}}" method="POST">

                
                    <div class="form-group">

                        <input type="text" name="title" value="{{task.title}}" placeholder="Write your title" class="form-control" autofocus>

                    </div>

                    <div class="form-group">

                        <input type="text" name="description" value="{{task.description}}" placeholder="Write a description" class="form-control">

                    </div>

                    <button type="submit" class="btn btn-success btn-block"> {{!-- Boton para que ejecute el formulario --}}
                        Save
                    </button>

                
                </form>

            </div>

        </div>

    </div>


</div>


